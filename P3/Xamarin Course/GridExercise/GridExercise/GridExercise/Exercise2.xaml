<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridExercise.Exercise2">
    <Grid BackgroundColor="#127ac7"
          Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" Grid.Row="0">
            <Label FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#fff" Text="Welcome to Xamarin"></Label>
            <Label FontSize="18" HorizontalOptions="Center" TextColor="#e0e0e0" Text="Cross-platform apps made easy"></Label>
        </StackLayout>
        <Button Grid.Row="1" Text="Login" TextColor="#e0e0e0" VerticalOptions="Fill" BackgroundColor="#1dabf0"></Button>
        <Button Grid.Row="2" Text="Register" TextColor="#e0e0e0" VerticalOptions="Fill" BackgroundColor="#1dabf0"></Button>
    </Grid>
</ContentPage>